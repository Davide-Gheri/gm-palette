{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "target": "es2018",
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "build",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}

