{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}

